<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TextSmall">
        <item name="fontPath">fonts/PT_Sans-Narrow-Web-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TextMedium">
        <item name="fontPath">fonts/PT_Sans-Narrow-Web-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="TextTitle">
        <item name="fontPath">fonts/PT_Sans-Narrow-Web-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextDescription">
        <item name="fontPath">fonts/PT_Sans-Narrow-Web-Regular.ttf</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="SplashTitle" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="fontPath">fonts/PT_Sans-Narrow-Web-Bold.ttf</item>
        <item name="android:textSize">@dimen/text_large_xxxx</item>
        <item name="android:background">@color/semiTransparentPrimaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
